<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
        <item name="android:actionBarSize">@dimen/action_bar_size</item>
    </style>

    <style name="MyRadioButton">
        <item name="colorControlNormal">@color/primary_text</item>
        <item name="colorControlActivated">@color/primary_text</item>
        <item name="android:paddingBottom">@dimen/my_radio_button_padding_bottom</item>
        <item name="android:paddingRight">@dimen/my_radio_button_padding_right</item>
        <item name="android:paddingTop">@dimen/my_radio_button_padding_top</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/my_radio_button_text_size</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/my_radio_button_margin_top</item>
    </style>

    <style name="MyButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/my_button_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/my_button_margin_left</item>
        <item name="android:layout_marginRight">@dimen/my_button_margin_right</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="MyCheckbox" parent="MyRadioButton">
        <item name="android:layout_marginLeft">@dimen/my_checkbox_margin_left</item>
        <item name="android:layout_marginRight">@dimen/my_checkbox_margin_right</item>
    </style>
</resources>
